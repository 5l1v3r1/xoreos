AUTOMAKE_OPTIONS = subdir-objects

AM_CXXFLAGS = -I$(top_srcdir)/src/ -ggdb -Wall -Wno-multichar -Wpointer-arith -Wshadow $(EOS_CXXFLAGS) $(BOOST_CPPFLAGS) $(GL_CFLAGS) $(GLU_CFLAGS) -DGLEW_STATIC $(WERROR)
AM_CFLAGS = $(AM_CXXFLAGS)
AM_LDFLAGS = $(BOOST_SYSTEM_LDFLAGS) $(BOOST_FILESYSTEM_LDFLAGS) $(BOOST_REGEX_LDFLAGS) $(GL_LIBS) $(GLU_LIBS) $(EOS_LIBS)
LIBS = $(LTLIBICONV) $(BOOST_SYSTEM_LIBS) $(BOOST_FILESYSTEM_LIBS) $(BOOST_REGEX_LIBS)
